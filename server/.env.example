# ============================================
# HagBlog Backend - Environment Variables
# Copy this file to .env and configure
# ============================================

# ===================
# Database (Required)
# ===================
# PostgreSQL connection URL
DATABASE_URL=postgresql://hagblog:hagblog123@localhost:5432/hagblog

# ===================
# Authentication (Required)
# ===================
# IMPORTANT: Generate a secure 32+ character secret for production!
# Use: openssl rand -base64 32
BETTER_AUTH_SECRET=dev-secret-change-in-production-make-it-at-least-32-chars

# Auth server URL (your backend URL)
BETTER_AUTH_URL=http://localhost:3001

# ===================
# CORS / Frontend
# ===================
# Frontend URL for CORS (your production domain)
FRONTEND_URL=http://localhost:3000

# ===================
# Server Settings
# ===================
PORT=3001

# Environment: development | production | test
NODE_ENV=development

# ===================
# Logging
# ===================
# Log level: fatal | error | warn | info | debug | trace
LOG_LEVEL=info

# ===================
# Production Settings (Dewacloud)
# ===================
# Uncomment and configure for production:
# DATABASE_URL=postgresql://user:password@postgres-host:5432/hagblog
# BETTER_AUTH_SECRET=your-secure-production-secret-at-least-32-chars
# BETTER_AUTH_URL=https://api.yourdomain.com
# FRONTEND_URL=https://yourdomain.com
# NODE_ENV=production
# LOG_LEVEL=info
